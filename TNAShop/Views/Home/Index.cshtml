@{
    ViewBag.Title = "Home Page";
}
@model TNAShop.ViewModels.HomeViewModel.HomeIndexViewModel
<img src="/Content/Images/Home/lkaa_1523423023.jpg" style="width:100%;" />

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div style="height: 700px;background: url(/Content/Images/Home/w1_1519791350.jpg);">
    <div style="width:60%;background-color: rgba(255,255,255,0.6)" class="container">
        <h2 style="color: white; background:#4c397b; text-align: center; border-radius: 10px; padding: 10px;">Đồng hồ nam</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div style="display:grid; grid-template-columns: auto auto;">
                        <div style="text-align: center;">
                            <img src="@Url.Content(Model.Products[0].Image)" alt="@Model.Products[0].Name" style="display: inline-block; width: 100%;">
                            <a href="/Product/Detail/@Model.Products[0].Id"><p>@Model.Products[0].Code</p></a>
                            @if (@Model.Products[0].PromotionalPrice == "1") {
                                if (@Model.Products[0].Price == "1") {
                                    <p>Gọi để thỏa thuận</p>
                                } else {
                                    <p><b style="color:red;">@Model.Products[0].Price</b></p>
                                }
                            } else {
                                <p>@Model.Products[0].Price</p>
                                <p><b style="color:red;">@Model.Products[0].PromotionalPrice</b></p>
                            }
                        </div>
                        <div style="text-align: center;">
                            <img src="@Url.Content(Model.Products[1].Image)" alt="@Model.Products[1].Name" style="display: inline-block; width: 100%;">
                            <a href="/Product/Detail/@Model.Products[1].Id"><p>@Model.Products[1].Code</p></a>
                            @if (@Model.Products[1].PromotionalPrice == "1") {
                                if (@Model.Products[1].Price == "1") {
                                    <p>Gọi để thỏa thuận</p>
                                } else {
                                    <p><b style="color:red;">@Model.Products[1].Price</b></p>
                                }
                            } else {
                                <p>@Model.Products[1].Price</p>
                                    <p><b style="color:red;">@Model.Products[1].PromotionalPrice</b></p>
                            }
                        </div>
                    </div>
                </div>
                @for (int i = 2; i < Model.Products.Count(); i++) {
                    <div class="item">
                        <div style="display:grid; grid-template-columns: auto auto;">
                            <div style="text-align: center;">
                                <img src="@Url.Content(Model.Products[i].Image)" alt="@Model.Products[i].Name" style="display: inline-block; width: 100%; ">
                                <a href="/Product/Detail/@Model.Products[i].Id">
                                    <p>@Model.Products[i].Code</p>
                                </a>
                                @if (@Model.Products[i].PromotionalPrice == "1") {
                                    if (@Model.Products[i].Price == "1") {
                                        <p>Gọi để thỏa thuận</p>
                                    } else {
                                        <p><b style="color:red;">@Model.Products[i].Price</b></p>
                                    }
                                } else {
                                    <p>@Model.Products[i].Price</p>
                                        <p><b style="color:red;">@Model.Products[i].PromotionalPrice</b></p>
                                    }
                            </div>
                            <div style="text-align: center;">
                                <img src="@Url.Content(Model.Products[++i].Image)" alt="@Model.Products[1].Name" style="display: inline-block; width: 100%;">
                                <a href="/Product/Detail/@Model.Products[i].Id">
                                    <p>@Model.Products[i].Code</p>
                                </a>
                                @if (@Model.Products[i].PromotionalPrice == "1") {
                                    if (@Model.Products[i].Price == "1") {
                                        <p>Gọi để thỏa thuận</p>
                                    } else {
                                        <p><b style="color:red;">@Model.Products[i].Price</b></p>
                                    }
                                } else {
                                    <p>@Model.Products[i].Price</p>
                                        <p><b style="color:red;">@Model.Products[i].PromotionalPrice</b></p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

