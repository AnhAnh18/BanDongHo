
@{
    ViewBag.Title = "OrderDet";
}
@model TNAShop.Domain.Order
<h2>Chi tiết hóa đơn</h2>
<table class="table table-bordered">
    <tr>
        <th>Mã hóa đơn</th>
        <th>Tên sản phẩm</th>
        <th>Giá bán</th>
        <th>Số lượng</th>
    </tr>
    @foreach (var item in Model.OrderDets) {
        <tr>
            <td>@item.OrderId</td>
            <td><img src="@Url.Content(item.Product.Image)" style="width:48px;" /> @item.Product.Name</td>
            <td>@item.ProductPrice</td>
            <td>@item.Quantity</td>
        </tr>
    }
</table>
